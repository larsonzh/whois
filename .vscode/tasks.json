{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "commitMsg",
      "type": "promptString",
      "description": "Commit message",
      "default": "chore: quick push"
    },
    {
      "id": "tagName",
      "type": "promptString",
      "description": "Tag name (e.g., v3.1.10)",
      "default": "v3.1.10"
    },
    {
      "id": "tagMsg",
      "type": "promptString",
      "description": "Tag message",
      "default": "Release"
    }
  ],
  "tasks": [
    {
      "label": "Git: Quick Push",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/tools/dev/quick_push.ps1",
        "-Message", "${input:commitMsg}"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Git: Quick Push + Gitee",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/tools/dev/quick_push.ps1",
        "-Message", "${input:commitMsg}",
        "-PushGitee"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Git: Tag Release",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/tools/dev/tag_release.ps1",
        "-Tag", "${input:tagName}",
        "-Message", "${input:tagMsg}"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
